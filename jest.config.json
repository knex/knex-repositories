{
  "moduleFileExtensions": ["ts", "js", "json"],
  "testMatch": ["<rootDir>/test/**/*.(spec|test).ts|tsx"],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "testEnvironment": "node",
  "reporters": ["default"],
  "coveragePathIgnorePatterns": [
    "<rootDir>/node_modules/",
    "<rootDir>/coverage/",
    "<rootDir>/test/"
  ],
  "globals": {
    "ts-jest": {
      "diagnostics": false
    }
  },
  "coverageThreshold": {
    "global": {
      "statements": 85,
      "branches": 70,
      "functions": 70,
      "lines": 85
    }
  }
}
